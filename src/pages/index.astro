---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import SocialsBar from '../components/SocialsBar.svelte';
import { SITE_TITLE, SITE_DESCRIPTION, SOCIALS } from '../consts';

import { Button } from 'bits-ui';

const profilePicURL = 'https://github.com/DaniruKun.png';
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<section
				class='relative mx-auto flex h-[70vh] flex-col place-content-around bg-slate-100 shadow-sm sm:min-h-screen'>
				<div
					id='hero'
					class='mx-auto flex flex-col place-items-center justify-center gap-20 space-y-4 rounded-lg bg-white p-10 md:max-w-3xl'>
					<section
						class='flex w-full flex-col justify-between space-y-4 align-middle md:flex-row md:items-center'
						id='avatar-nav'>
						<div id='avatar-container' class='flex flex-col justify-center space-y-4 align-middle'>
							<img
								src={profilePicURL}
								alt='Avatar'
								class='mx-auto w-44 rounded-full border-2 border-black shadow-lg'
							/>
							<section id='brand-title' class='items-center text-center text-2xl font-bold'>
								<p>danirukun</p>
							</section>
						</div>

						<section id='navigation' class='align-right text-right'>
							<nav class='flex flex-col space-y-4'>
								<Button.Root
									href='/portfolio'
									class='text-center text-lg font-semibold text-primary hover:text-slate-600 md:text-right'>
									Portfolio
								</Button.Root>
								<Button.Root
									href='/photography'
									class='text-center text-lg font-semibold text-primary hover:text-slate-600 md:text-right'>
									Photography
								</Button.Root>
								<Button.Root
									href='/blog'
									class='text-center text-lg font-semibold text-primary hover:text-slate-600 md:text-right'>
									Blog
								</Button.Root>
								<Button.Root
									href='/uses'
									class='text-center text-lg font-semibold text-primary hover:text-slate-600 md:text-right'>
									Computing
								</Button.Root>
							</nav>
						</section>
					</section>
					<p>
						Hi, my name is Dan. I build stuff in the creator industry, with a lot of experience in video streaming, web development, high load systems and CG.
						<br />
						I've worked with big and small brands like Hasbro, Twitch, MiHoyo etc. on various high impact projects.
						I'm a big fan of Japanese culture, so you will find me at overseas events a lot!
						Feel free to reach out to me on <code>dan (at) danirukun (dot) com</code> if you want your vision to be realised!
					</p>
				</div>

				<section id='socials' class='mx-auto w-fit px-4 py-2'>
					<SocialsBar socials={SOCIALS} translate />
				</section>
			</section>
			<Footer />
		</main>
	</body>
</html>
